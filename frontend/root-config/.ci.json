{
    "$schema": "../../.jenkins/ci.schema.json",
    "dependencies": {
        "enabled": true,
        "command": "npm ci"
    },
    "lint": {
        "enabled": true,
        "command": "npm run lint"
    },
    "build": {
        "enabled": true,
        "command": "npm run build"
    },
    "image": {
        "enabled": true,
        "tagSeries": "fe-root-config",
        "repository": "minidomo/gemdeck",
        "platform": {
            "single": false,
            "multi": [
                "linux/amd64",
                "linux/arm64"
            ]
        }
    },
    "deploy": {
        "enabled": true,
        "name": "root-config"
    }
}