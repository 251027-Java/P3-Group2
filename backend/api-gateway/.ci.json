{
    "$schema": "../../.jenkins/ci.schema.json",
    "lint": {
        "enabled": true,
        "command": "mvn -B spotless:check checkstyle:check"
    },
    "build": {
        "enabled": true,
        "command": "mvn -B package -DskipTests"
    },
    "image": {
        "enabled": true,
        "tagSeries": "be-gateway",
        "repository": "minidomo/gemdeck",
        "platform": {
            "single": false,
            "multi": [
                "linux/amd64",
                "linux/arm64"
            ]
        }
    },
    "deploy": {
        "enabled": true,
        "name": "api-gateway"
    }
}