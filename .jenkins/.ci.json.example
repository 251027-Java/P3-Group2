{
    "$schema": "./ci.schema.json",
    "lint": {
        "enabled": true,
        "command": "mvn -B spotless:check checkstyle:check"
    },
    "test": {
        "enabled": true,
        "command": "mvn -B test"
    },
    "build": {
        "enabled": true,
        "command": "mvn -B package -DskipTests"
    },
    "image": {
        "enabled": true,
        "tagSeries": "be-jenkins-test",
        "repository": "docker/repository",
        "platform": {
            "single": false,
            "multi": [
                "linux/amd64",
                "linux/arm64"
            ]
        }
    }
}